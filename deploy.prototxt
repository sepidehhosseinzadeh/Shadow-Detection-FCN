# score fc7
layer {
  name: "score-binary"
  type: "Convolution"
  bottom: "fc7"
  top: "score-binary"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 0
  }
  convolution_param {
    num_output: 2
    kernel_size: 1
    engine: CAFFE
  }
}

# interpolate
layer {
  name: "upscore2-binary"
  type: "Deconvolution"
  bottom: "score-binary"
  top: "upscore2-binary"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  convolution_param {
    num_output: 2
    bias_term: false
    kernel_size: 4
    stride: 2
  }
}

# score pool4
layer {
  name: "score-pool4-binary"
  type: "Convolution"
  bottom: "pool4"
  top: "score-pool4-binary"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 0
  }
  convolution_param {
    num_output: 2
    kernel_size: 1
    engine: CAFFE
  }
}

# fuse
layer { type: 'Crop' name: 'crop' bottom: 'score-pool4-binary' bottom: 'upscore2-binary'
  top: 'score-pool4-binaryc' }
layer {
  name: "fuse"
  type: "Eltwise"
  bottom: "upscore2-binary"
  bottom: "score-pool4-binaryc"
  top: "score-fused"
  eltwise_param {
    operation: SUM
  }
}

# interpolate + crop
layer {
  name: "upsample-fused-binary"
  type: "Deconvolution"
  bottom: "score-fused"
  top: "bigscore"
  param {
    lr_mult: 0
  }
  convolution_param {
    num_output: 2
    bias_term: false
    kernel_size: 32
    stride: 16
  }
}
layer { type: 'Crop' name: 'crop' bottom: 'bigscore' bottom: 'data' top: 'score' }
